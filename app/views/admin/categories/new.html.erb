<section class="admin-categories-new">

<br>
<div class="well-sm">
  <%= link_to 'Back to all Categories', [:admin, :categories], class: 'btn btn-success' %>
</div>
  <header class="page-header">
    <h1>Admin &raquo; New Category</h1>
  </header>

  <br>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @category] do |form| %>
        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <br>
        <%= form.submit 'Create New Category', class: 'btn btn-success' %>        
      <% end %>
    </div>
  </div>

</section>