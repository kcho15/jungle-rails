<tr>
  <td>
    <%= image_tag item.product.image.tiny.url %>
  </td>
  <td>
    <h3><%= item.product.name %></h4>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.product.price %>
  </td>
  <td>
    <div>
    <%= item.quantity %>
    </div>
  </td>
  <td>
    <%= humanized_money_with_symbol item.product.price * item.quantity %>
  </td>
</tr>